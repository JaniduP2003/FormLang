form Registration {


  meta author = "Janidu";
  
  section Info {
    field username: text pattern="[A-Za-z]+" required;
    field password: password required pattern=".{6,}";
    field name: text pattern="[A-Za-z]+" required;
    field age: number min=18 max=99 required;
    field email: email required;
    
    field Day: date min="2000-01-01" max="2025-12-31" required;
    field Complaint: textarea rows=4 cols=40 default="Complaint";
    field city: dropdown ["Niwithigala", "Balangoda", "kosgama"] required;
    field receipt: file accept=".pdf" required;
    
    field Conditions: checkbox default=true;
  }
  
  validate {
    if age < 18 {
      error "You must be at least 18 years old.";
    }
    if password == 0 {
      error "Password can't be empty.";
    }
    if email == 0 {
      error "Email can't be empty.";
    }
     if name == 0 {
      error "Email can't be empty.";
    }
  }
}